drop procedure [dbo].[spDB_Sales_comp_item]

GO

CREATE PROCEDURE [dbo].[spDB_Sales_comp_item] 
(
	@StartDate datetime,
	@EndDate datetime,
	@RetailItemID nvarchar(max),
	@DataareaID nvarchar(10)
)
AS

set nocount on

select 
MONTH, YEAR, STORENAME, sum(NETAMOUNTINCLTAX) as NETAMOUNTINCLTAX
from
(
	select 
	datepart(month,t.TRANSDATE) as MONTH, datepart(year,t.TRANSDATE) as YEAR,  r.NETAMOUNTINCLTAX*-1 as NETAMOUNTINCLTAX, s.NAME AS STORENAME
	from RBOTRANSACTIONSALESTRANS r 
	left outer join RBOTRANSACTIONTABLE t on r.TRANSACTIONID = t.TRANSACTIONID and t.TERMINAL = r.TERMINALID and t.STORE = r.STORE
	left outer join RBOSTORETABLE s on t.STORE = s.STOREID and t.DATAAREAID = s.DATAAREAID
	where @RetailItemID = r.ITEMID and TYPE = 2 and t.ENTRYSTATUS = 0 and r.TRANSACTIONSTATUS = 0 and t.DATAAREAID = @DataareaID and t.TRANSDATE >= @StartDate and t.TRANSDATE <= @EndDate
) temp
group by
MONTH, YEAR, STORENAME

GO

