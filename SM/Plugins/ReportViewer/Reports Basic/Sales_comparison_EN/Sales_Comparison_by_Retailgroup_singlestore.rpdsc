CREATE PROCEDURE [dbo].[spDB_Sales_comp_group] 
(
	@StartDate datetime,
	@EndDate datetime,
	@DataareaID nvarchar(10)
)
AS

set nocount on

select 
MONTH, YEAR, STORENAME,  sum(NETAMOUNTINCLTAX) as NETAMOUNTINCLTAX, ITEMGROUPNAME, ITEMDEPARTMENTNAME
from
(
	select 
	datepart(month,t.TRANSDATE) as MONTH, datepart(year,t.TRANSDATE) as YEAR, r.NETAMOUNTINCLTAX*-1 as NETAMOUNTINCLTAX, s.NAME AS STORENAME, ISNULL(v.NAME, r.ITEMDEPARTMENTID) as ITEMDEPARTMENTNAME, ISNULL(w.NAME, r.ITEMGROUPID) as ITEMGROUPNAME --,t.STORE, t.TERMINAL, t.RECEIPTID, r.NETAMOUNTINCLTAX*-1 as NETAMOUNTINCLTAX, t.DATAAREAID
	from RBOTRANSACTIONSALESTRANS r 
	left outer join RBOTRANSACTIONTABLE t on r.TRANSACTIONID = t.TRANSACTIONID and t.TERMINAL = r.TERMINALID and t.STORE = r.STORE
	left outer join RBOSTORETABLE s on t.STORE = s.STOREID and t.DATAAREAID = s.DATAAREAID
	left outer join RBOINVENTITEMRETAILGROUP w on r.ITEMGROUPID = w.GROUPID and r.DATAAREAID = w.DATAAREAID
	left outer join RBOINVENTITEMDEPARTMENT v on r.ITEMDEPARTMENTID = v.DEPARTMENTID and v.DATAAREAID = r.DATAAREAID
	where TYPE = 2 and t.ENTRYSTATUS = 0 and r.TRANSACTIONSTATUS = 0 and t.DATAAREAID = @DataareaID and t.TRANSDATE >= @StartDate and t.TRANSDATE <= @EndDate
) temp
group by
MONTH, YEAR, STORENAME, ITEMGROUPNAME, ITEMDEPARTMENTNAME
order by Year, MONTH

GO

